{
  "metadata": {
    "spec-version": "1.5"
  },
  "configuration-groups": [
    {
      "label": "Reference",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Connection",
      "properties": [
        {
          "widget-type": "toggle",
          "label": "Use connection",
          "name": "useConnection",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "YES"
            },
            "off": {
              "value": "false",
              "label": "NO"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "connection-select",
          "label": "Connection",
          "name": "connection",
          "widget-attributes": {
            "connectionType": "Salesforce"
          }
        },
        {
          "widget-type" : "hidden",
          "label": "OAuth Information",
          "name": "oAuthInfo"
        },
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "username"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "password",
          "label": "Security Token",
          "name": "securityToken"
        },
        {
          "widget-type": "textbox",
          "label": "Consumer Key",
          "name": "consumerKey"
        },
        {
          "widget-type": "password",
          "label": "Consumer Secret",
          "name": "consumerSecret"
        },
        {
          "widget-type": "textbox",
          "label": "Login Url",
          "name": "loginUrl",
          "widget-attributes" : {
            "default": "https://login.salesforce.com/services/oauth2/token"
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "SObject Name",
          "name": "sObject"
        },
        {
          "label": "browse",
          "widget-type": "connection-browser",
          "widget-category": "plugin",
          "widget-attributes": {
            "connectionType": " SALESFORCE",
            "label": "Browse"
          }
        },
        {
          "widget-type": "radio-group",
          "label": "Operation",
          "name": "operation",
          "widget-attributes": {
            "layout": "inline",
            "default": "insert",
            "options": [
              {
                "id": "insert",
                "label": "Insert"
              },
              {
                "id": "upsert",
                "label": "Upsert"
              },
              {
                "id": "update",
                "label": "Update"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Upsert External ID Field",
          "name": "externalIdField"
        },
        {
          "widget-type": "textbox",
          "label": "Max Records Per Batch",
          "name": "maxRecordsPerBatch",
          "widget-attributes" : {
            "default": "10000"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Max Bytes Per Batch",
          "name": "maxBytesPerBatch",
          "widget-attributes" : {
            "default": "10000000"
          }
        },
        {
          "widget-type": "select",
          "label": "Error Handling",
          "name": "errorHandling",
          "widget-attributes": {
            "values": [
              "Skip on error",
              "Stop on error"
            ],
            "default": "Skip on error"
          }
        }
      ]
    }
  ],
  "filters": [
    {
      "name": "showConnectionProperties ",
      "condition": {
        "expression": "useConnection == false"
      },
      "show": [
        {
          "type": "property",
          "name": "consumerKey"
        },
        {
          "type": "property",
          "name": "consumerSecret"
        },
        {
          "type": "property",
          "name": "securityToken"
        },
        {
          "type": "property",
          "name": "username"
        },
        {
          "type": "property",
          "name": "password"
        },
        {
          "type": "property",
          "name": "loginUrl"
        }
      ]
    },
    {
      "name": "showConnectionId",
      "condition": {
        "expression": "useConnection == true"
      },
      "show": [
        {
          "type": "property",
          "name": "connection"
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "label": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string"
        ],
        "schema-default-type": "string",
        "property-watch": "format"
      }
    }
  ]
}
