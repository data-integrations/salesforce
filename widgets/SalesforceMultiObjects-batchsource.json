{
  "metadata": {
    "spec-version": "1.5"
  },
  "configuration-groups": [
    {
      "label": "Reference",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Connection",
      "properties": [
        {
          "widget-type": "toggle",
          "label": "Use connection",
          "name": "useConnection",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "YES"
            },
            "off": {
              "value": "false",
              "label": "NO"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "connection-select",
          "label": "Connection",
          "name": "connection",
          "widget-attributes": {
            "connectionType": "Salesforce"
          }
        },
        {
          "widget-type" : "hidden",
          "label": "OAuth Information",
          "name": "oAuthInfo"
        },
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "username"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "password",
          "label": "Security Token",
          "name": "securityToken"
        },
        {
          "widget-type": "textbox",
          "label": "Consumer Key",
          "name": "consumerKey"
        },
        {
          "widget-type": "password",
          "label": "Consumer Secret",
          "name": "consumerSecret"
        },
        {
          "widget-type": "textbox",
          "label": "Login Url",
          "name": "loginUrl",
          "widget-attributes" : {
            "default": "https://login.salesforce.com/services/oauth2/token"
          }
        },
        {
          "widget-type": "number",
          "label": "Connect Timeout",
          "name": "connectTimeout",
          "widget-attributes": {
            "min": "0",
            "default": "30000"
          }
        },
        {
          "widget-type": "number",
          "label": "Read Timeout(In Sec)",
          "name": "readTimeout",
          "widget-attributes": {
            "min": "0",
            "default": "3600"
          }
        }
      ]
    },
    {
      "label": "HTTP Proxy",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Proxy URL",
          "name": "proxyUrl",
          "widget-attributes" : {
            "placeholder": "Proxy Url"
          }
        }
      ]
    },
    {
      "label": "SObject specification",
      "properties": [
        {
          "widget-type": "csv",
          "label": "White List",
          "name": "whiteList",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "List of SObjects to replicate"
          }
        },
        {
          "widget-type": "csv",
          "label": "Black List",
          "name": "blackList",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "List of SObjects NOT to replicate"
          }
        }
      ]
    },
    {
      "label": "Incremental Load Properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Last Modified After",
          "name": "datetimeAfter",
          "widget-attributes" : {
            "placeholder": "YYYY-MM-DDThh:mm:ssZ (ex: 2019-01-01T00:00:00Z)"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Last Modified Before",
          "name": "datetimeBefore",
          "widget-attributes" : {
            "placeholder": "YYYY-MM-DDThh:mm:ssZ (ex: 2019-01-01T00:00:00Z)"
          }
        },
        {
          "widget-type": "keyvalue-dropdown",
          "label": "Duration",
          "name": "duration",
          "widget-attributes": {
            "showDelimiter": "false",
            "delimiter": ",",
            "kv-delimiter": " ",
            "dropdownOptions": [
              "SECONDS",
              "MINUTES",
              "HOURS",
              "DAYS",
              "MONTHS",
              "YEARS"
            ],
            "key-placeholder": "Duration"
          }
        },
        {
          "widget-type": "keyvalue-dropdown",
          "label": "Offset",
          "name": "offset",
          "widget-attributes": {
            "showDelimiter": "false",
            "delimiter": ",",
            "kv-delimiter": " ",
            "dropdownOptions": [
              "SECONDS",
              "MINUTES",
              "HOURS",
              "DAYS",
              "MONTHS",
              "YEARS"
            ],
            "key-placeholder": "Offset"
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "radio-group",
          "label": "SOQL Operation Type",
          "name": "operation",
          "widget-attributes": {
            "layout": "inline",
            "default": "query",
            "options": [
              {
                "id": "query",
                "label": "query"
              },
              {
                "id": "queryAll",
                "label": "queryAll"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "SObject Name Field",
          "name": "sObjectNameField",
          "widget-attributes": {
            "placeholder": "Field used to indicate from which SObject data comes from"
          }
        }
      ]
    }
  ],
  "filters": [
    {
      "name": "showConnectionProperties ",
      "condition": {
        "expression": "useConnection == false"
      },
      "show": [
        {
          "type": "property",
          "name": "consumerKey"
        },
        {
          "type": "property",
          "name": "consumerSecret"
        },
        {
          "type": "property",
          "name": "securityToken"
        },
        {
          "type": "property",
          "name": "username"
        },
        {
          "type": "property",
          "name": "password"
        },
        {
          "type": "property",
          "name": "loginUrl"
        },
        {
          "type": "property",
          "name": "connectTimeout"
        },
        {
          "type": "property",
          "name": "readTimeout"
        },
        {
          "type": "property",
          "name": "proxyUrl"
        }
      ]
    },
    {
      "name": "showConnectionId",
      "condition": {
        "expression": "useConnection == true"
      },
      "show": [
        {
          "type": "property",
          "name": "connection"
        }
      ]
    }
  ],
  "outputs": [ ]
}
