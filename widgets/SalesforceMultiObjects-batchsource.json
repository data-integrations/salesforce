{
  "metadata": {
    "spec-version": "1.5"
  },
  "configuration-groups": [
    {
      "label": "Reference",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Authentication",
      "properties": [
        {
          "widget-type" : "hidden",
          "label": "OAuth Information",
          "name": "oAuthInfo"
        },
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "username"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "password",
          "label": "Security Token",
          "name": "securityToken"
        },
        {
          "widget-type": "textbox",
          "label": "Consumer Key",
          "name": "consumerKey"
        },
        {
          "widget-type": "password",
          "label": "Consumer Secret",
          "name": "consumerSecret"
        },
        {
          "widget-type": "textbox",
          "label": "Login Url",
          "name": "loginUrl",
          "widget-attributes" : {
            "default": "https://login.salesforce.com/services/oauth2/token"
          }
        }
      ]
    },
    {
      "label": "SObject specification",
      "properties": [
        {
          "widget-type": "csv",
          "label": "White List",
          "name": "whiteList",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "List of SObjects to replicate"
          }
        },
        {
          "widget-type": "csv",
          "label": "Black List",
          "name": "blackList",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "List of SObjects NOT to replicate"
          }
        }
      ]
    },
    {
      "label": "Incremental Load Properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Last Modified After",
          "name": "datetimeAfter",
          "widget-attributes" : {
            "placeholder": "YYYY-MM-DDThh:mm:ssZ (ex: 2019-01-01T00:00:00Z)"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Last Modified Before",
          "name": "datetimeBefore",
          "widget-attributes" : {
            "placeholder": "YYYY-MM-DDThh:mm:ssZ (ex: 2019-01-01T00:00:00Z)"
          }
        },
        {
          "widget-type": "keyvalue-dropdown",
          "label": "Duration",
          "name": "duration",
          "widget-attributes": {
            "showDelimiter": "false",
            "delimiter": ",",
            "kv-delimiter": " ",
            "dropdownOptions": [
              "SECONDS",
              "MINUTES",
              "HOURS",
              "DAYS",
              "MONTHS",
              "YEARS"
            ],
            "key-placeholder": "Duration"
          }
        },
        {
          "widget-type": "keyvalue-dropdown",
          "label": "Offset",
          "name": "offset",
          "widget-attributes": {
            "showDelimiter": "false",
            "delimiter": ",",
            "kv-delimiter": " ",
            "dropdownOptions": [
              "SECONDS",
              "MINUTES",
              "HOURS",
              "DAYS",
              "MONTHS",
              "YEARS"
            ],
            "key-placeholder": "Offset"
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "radio-group",
          "label": "operation",
          "name": "operation",
          "widget-attributes": {
            "layout": "inline",
            "default": "query",
            "options": [
              {
                "id": "query",
                "label": "query"
              },
              {
                "id": "queryAll",
                "label": "queryAll"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "SObject Name Field",
          "name": "sObjectNameField",
          "widget-attributes": {
            "placeholder": "Field used to indicate from which SObject data comes from"
          }
        }
      ]
    }
  ],
  "outputs": [ ]
}
