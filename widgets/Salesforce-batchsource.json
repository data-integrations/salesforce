{
  "metadata": {
    "spec-version": "1.5"
  },
  "configuration-groups": [
    {
      "label": "Reference",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label": "Authentication",
      "properties": [
        {
          "widget-type" : "hidden",
          "label": "OAuth Information",
          "name": "oAuthInfo"
        },
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "username"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "password",
          "label": "Security Token",
          "name": "securityToken"
        },
        {
          "widget-type": "textbox",
          "label": "Consumer Key",
          "name": "consumerKey"
        },
        {
          "widget-type": "password",
          "label": "Consumer Secret",
          "name": "consumerSecret"
        },
        {
          "widget-type": "textbox",
          "label": "Login Url",
          "name": "loginUrl",
          "widget-attributes" : {
            "default": "https://login.salesforce.com/services/oauth2/token"
          }
        }
      ]
    },
    {
      "label": "SOQL Query",
      "properties": [
        {
          "widget-type": "textarea",
          "label": "SOQL",
          "name": "query",
          "widget-attributes" : {
            "placeholder": "SELECT <offset field>, ... FROM <object> WHERE <offset field> > <offset> ORDER BY <offset field>"
          },
          "plugin-function": {
            "method": "POST",
            "widget": "outputSchema",
            "output-property": "schema",
            "plugin-method": "getSchema"
          }
        }
      ]
    },
    {
      "label": "SObject Query",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "SObject Name",
          "name": "sObjectName",
          "widget-attributes" : {
            "placeholder": "Salesforce object name"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Last Modified After",
          "name": "datetimeAfter",
          "widget-attributes" : {
            "placeholder": "YYYY-MM-DDThh:mm:ssZ (ex: 2019-01-01T00:00:00Z)"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Last Modified Before",
          "name": "datetimeBefore",
          "widget-attributes" : {
            "placeholder": "YYYY-MM-DDThh:mm:ssZ (ex: 2019-01-01T00:00:00Z)"
          }
        },
        {
          "widget-type": "keyvalue-dropdown",
          "label": "Duration",
          "name": "duration",
          "widget-attributes": {
            "showDelimiter": "false",
            "delimiter": ",",
            "kv-delimiter": " ",
            "dropdownOptions": [
              "SECONDS",
              "MINUTES",
              "HOURS",
              "DAYS",
              "MONTHS",
              "YEARS"
            ],
            "key-placeholder": "Duration"
          }
        },
        {
          "widget-type": "keyvalue-dropdown",
          "label": "Offset",
          "name": "offset",
          "widget-attributes": {
            "showDelimiter": "false",
            "delimiter": ",",
            "kv-delimiter": " ",
            "dropdownOptions": [
              "SECONDS",
              "MINUTES",
              "HOURS",
              "DAYS",
              "MONTHS",
              "YEARS"
            ],
            "key-placeholder": "Offset"
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "radio-group",
          "label": "SOQL Operation Type",
          "name": "operation",
          "widget-attributes": {
            "layout": "inline",
            "default": "query",
            "options": [
              {
                "id": "query",
                "label": "query"
              },
              {
                "id": "queryAll",
                "label": "queryAll"
              }
            ]
          }
        },
        {
          "widget-type": "toggle",
          "name": "enablePKChunk",
          "label": "Enable PK Chunking",
          "widget-attributes": {
            "default": "false",
            "on": {
              "value": "true",
              "label": "True"
            },
            "off": {
              "value": "false",
              "label": "False"
            }
          }
        },
        {
          "name": "chunkSize",
          "label" : "Chunk Size",
          "widget-type": "textbox",
          "widget-attributes" : {
            "placeholder": "100000"
          }
        },
        {
          "name": "parent",
          "label" : "SObject Parent Name",
          "widget-type": "textbox",
          "widget-attributes" : {
            "placeholder": "Salesforce object parent name"
          }
        }
      ]
    }
  ],
  "filters": [
    {
      "name": "enablePKChunk",
      "condition": {
        "expression": "enablePKChunk == true"
      },
      "show": [
        {
          "name": "chunkSize"
        },
        {
          "name": "parent"
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "label": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string"
        ],
        "schema-default-type": "string",
        "property-watch": "format"
      }
    }
  ]
}